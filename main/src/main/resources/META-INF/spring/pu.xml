<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:os-core="http://www.openspaces.org/schema/core"
	xmlns:os-events="http://www.openspaces.org/schema/events"
	xmlns:os-remoting="http://www.openspaces.org/schema/remoting"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/10.0/core/openspaces-core.xsd
       http://www.openspaces.org/schema/events http://www.openspaces.org/schema/10.0/events/openspaces-events.xsd
       http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/10.0/remoting/openspaces-remoting.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- Spring property configurer which allows us to use system properties 
		(such as user.name). -->
	<bean id="propertiesConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

	<!-- Enables the usage of @GigaSpaceContext annotation based injection. -->
	<os-core:giga-space-context />

	<!-- A bean representing a space (an IJSpace implementation). Note, we do 
		not specify here the cluster topology of the space. It is declated outside 
		of the processing unit or within the SLA bean. -->
	<os-core:space id="space" url="/./space" />

	<!-- Defines a distributed transaction manager. -->
	<os-core:distributed-tx-manager id="transactionManager" />

	<!-- OpenSpaces simplified space API built on top of IJSpace/JavaSpace. -->
	<os-core:giga-space id="gigaSpace" space="space"
		tx-manager="transactionManager" />

	<!-- The data processor bean -->
	<bean id="dataProcessor" class="com.vpmsbcm.processor.Processor" />

	<!-- all incoming -->
	<bean id="writeWoodstick"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyWrite" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Woodstick">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="incoming" />
			</bean>
		</property>
	</bean>
	
	<bean id="writeCaseWithDetonator"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyWrite" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.CaseWithDetonator">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="incoming" />
			</bean>
		</property>
	</bean>

	<bean id="writePropellingCharge"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyWrite" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.PropellingCharge">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="incoming" />
			</bean>
		</property>
	</bean>
	
	<bean id="writeLoad"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyWrite" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Load">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="incoming" />
			</bean>
		</property>
	</bean>

	<bean id="writeRocket"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyWrite" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Rocket">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="incoming" />
			</bean>
		</property>
	</bean>
	
	<!-- all outgoing -->
	<bean id="takeWoodstick"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyTake" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Woodstick">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="outgoing" />
			</bean>
		</property>
	</bean>
	
	<bean id="takeCaseWithDetonator"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyTake" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.CaseWithDetonator">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="outgoing" />
			</bean>
		</property>
	</bean>

	<bean id="takePropellingCharge"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyTake" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.PropellingCharge">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="outgoing" />
			</bean>
		</property>
	</bean>
	
	<bean id="takeLoad"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyTake" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Load">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="outgoing" />
			</bean>
		</property>
	</bean>

	<bean id="takeRocket"
		class="org.openspaces.events.notify.SimpleNotifyEventListenerContainer">
		<property name="gigaSpace" ref="gigaSpace" />
		<property name="notifyTake" value="true" />
		<property name="template">
			<bean class="com.vpmsbcm.common.model.Rocket">
			</bean>
		</property>

		<property name="eventListener">
			<bean class="org.openspaces.events.adapter.AnnotationEventListenerAdapter">
				<property name="delegate" ref="outgoing" />
			</bean>
		</property>
	</bean>	

	<!-- Enable scan for OpenSpaces and Spring components -->
	<context:component-scan base-package="com.vpmsbcm" />

	<!-- Enable support for @Notify annotation -->
	<os-events:annotation-support />
</beans>